<!-- BEGIN LOGIN SECTION -->
<section class="section-account">
  <div class="img-backdrop"></div>
 
  <div class="card contain-sm style-transparent">
    <div class="card-body">
      <div class="row">

        <div class="col-sm-8 col-sm-offset-2">
          <center><span class="text-lg text-bold text-primary"><%= t('login.login_to_artist ') %></span></center>
          <br/><br/>
          
          <div class="card">
            <div class="card-body">

              <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form floating-label'}) do |f| %>
          
                <div class="form-group <%= (resource.errors["email"].any? ? "has-error" : '') %>">
                  <%= f.label :email %>
                  <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: 'off', value: '' %>
                                    <% if resource.errors["email"].any? %>
                    <p class="help-block errorMsg"><%= resource.errors["email"][0] %></p> 
                  <% end %>
                </div>
                <div class="form-group <%= (resource.errors["password"].any? ? "has-error" : '') %>">
                  <%= f.label :password %>
                  <%= f.password_field :password, class: "form-control", autocomplete: "off", value: '' %>
                </div>
                <br/>
                <div class="row">
                  <div class="col-xs-12 text-center">
                      <%= f.submit "Login", class: 'btn btn-raised btn-block' %>
                  </div><!--end .col -->
                </div><!--end .row -->
              <% end %>

            </div>
          </div>

        </div>
      </div>
    </div><!--end .card-body -->
  </div><!--end .card -->
</section>
<!-- END LOGIN SECTION -->
