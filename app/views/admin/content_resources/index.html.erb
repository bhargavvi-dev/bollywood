<h1>Content Resource</h1>

<table class="table table-hover">
	<thead>
	   <tr class="info">
	      <th>Photo</th>
	   </tr>
    </thead>
	<tbody>
	     <% @content_resources.each do |content_resource| %>
	     <tr class="active">
	          <td><%= image_tag content_resource.content_resource.photo.url(:thumb) %></td>
	   
	      <td><%= link_to image_tag("/delete.png"),admin_data_item_content_item_content_resource_path(@data_item,@content_item,content_resource),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
                </tr>
	     
              <% end %>
	</tbody>
</table>
<%= link_to 'New Content Resource',  new_admin_data_item_content_item_content_resource_path , :class => "btn btn-primary"%>
<%= link_to 'Back', admin_data_item_content_items_path , :class => "btn btn-primary"%>